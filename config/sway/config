# Font.
font pango:Ubuntu Regular 14

# Variables.
set $mod Mod1
set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $browser firefox
set $browser2 google-chrome-stable --enable-features=UseOzonePlatform --ozone-platform=wayland
set $menu "$HOME/.config/sway/bemenu-wrap.sh"
set $colorpick "$HOME/.config/sway/color-pick.sh"
set $screenshot "$HOME/.config/sway/screenshot.sh"

# Output.
exec_always "$HOME/.config/sway/adjust-screen.sh" "1"
output * bg "$HOME/github.com/illia-danko/wallpapers/0080.jpg" fill

# Keyboard.
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $browser
bindsym Ctrl+$mod+Shift+Return exec $browser2
bindsym $mod+r exec $menu commands
bindsym $mod+Shift+i exec $menu clipboard
bindsym Print exec $screenshot select
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym $mod+Shift+z exec swaylock
bindsym $mod+Shift+p exec $colorpick
bindsym $mod+Shift+u exec makoctl dismiss

bindsym $mod+Shift+q kill
floating_modifier $mod normal
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
# Move your focus around.
bindsym $mod+Shift+$left focus left
bindsym $mod+Shift+$down focus down
bindsym $mod+Shift+$up focus up
bindsym $mod+Shift+$right focus right
# Switch to workspace.
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move focused container to workspace.
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
# Make the current focus fullscreen.
bindsym $mod+Shift+Space fullscreen
# Toggle the current focus between tiling and floating mode.
bindsym $mod+Shift+f floating toggle
# Swap focus between the tiling area and the floating area.
bindsym $mod+Space focus mode_toggle
# Move focus to the parent container
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+equal scratchpad show, floating disable

# Layout.
input "type:keyboard" {
    xkb_layout us,ua
    # See https://gist.github.com/jatcwang/ae3b7019f219b8cdc6798329108c9aee
    #
    # grp:win_space_toggle - [Win-Space] -> toggle layout.
    # ctrl:nocaps - bind Ctrl to Capslock.
    # ctrl:swap_rwin_rctl - swap RCtrl and RWin keys.
    xkb_options "grp:win_space_toggle,ctrl:nocaps,ctrl:swap_rwin_rctl"
}

# Resizing containers.
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    # Return to default mode.
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "resize"

# Gaps.
gaps {
    inner 2
    outer 2
}

# Window rules.
for_window [title="Firefox — Sharing Indicator"] floating enable
for_window [title="Firefox Developer Edition — Sharing Indicator"] floating enable
for_window [title="Bluetooth Devices"] floating enable
for_window [title="1 Reminder"] floating enable # betterbird event notification

# assign [app_id="Alacritty"] workspace 1
# assign [app_id="firefox"] workspace 2
# assign [app_id="imv"] workspace 10

# Disable title bar.
for_window [tiling] border pixel 0

# Appearance.
client.focused ${TTY_COLOR_BG1} ${TTY_COLOR_BG1} ${TTY_COLOR_FG1} ${TTY_COLOR_BG1}
client.unfocused ${TTY_COLOR_FG1} ${TTY_COLOR_FG1} ${TTY_COLOR_BG1} ${TTY_COLOR_FG1}
client.focused_inactive ${TTY_COLOR_FG1} ${TTY_COLOR_FG1} ${TTY_COLOR_BG1} ${TTY_COLOR_FG1}

# Status Bar.
bar {
    swaybar_command waybar
}

# Start applications.
set $gnome-schema org.gnome.desktop.interface

# Lock screen.
exec swayidle -w \
         timeout 300 'swaylock -f' \
         timeout 600 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f'

# Background services.
#
# Adjust screen gamma according to location and time rules.
exec wlsunset -L 52.2297 -l 21.0122
# Adjust windows layout dynamically.
exec autotiling-rs
# Sqlite based clipboard history manager.
exec wl-paste --watch cliphist store
# Bluetooth.
exec blueman-applet
# Network manager.
exec nm-applet --indicator
# Reset mako appearance.
exec pkill mako

include /etc/sway/config.d/*
