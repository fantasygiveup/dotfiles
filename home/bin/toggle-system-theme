#!/usr/bin/env bash

# Toggle light and dark theme variants system widely.
# Gruvbox colors.

set -eou pipefail

changes=("*dark" "2c313a" "Github Dark")

case "$SYSTEM_COLOR_THEME" in
    2c313a) changes=("*light" "d5e5f6" "Github Light");;
esac

perl -pi -e "s/(^export SYSTEM_COLOR_THEME=).*/\1\"${changes[1]}\"/;" "$HOME/.config-common.sh"
