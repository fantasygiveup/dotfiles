[init]
    defaultBranch = master
[core]
    editor = emacs-runner
[diff]
    tool = ediff
[difftool "ediff"]
    cmd = emacs-runner --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[merge]
    tool = ediff
[mergetool "ediff"]
    cmd = emacs-runner --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$BASE\\\" \\\"$REMOTE\\\" \\\"$MERGED\\\")\"

