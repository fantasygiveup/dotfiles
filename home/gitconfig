[init]
    defaultBranch = master
[pull]
    rebase = false # always merge over rebase
[core]
    editor = nvim
[diff]
    tool = nvim
[difftool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE
[merge]
    tool = nvim
[mergetool "nvim"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[advice]
    skippedCherryPicks = false

